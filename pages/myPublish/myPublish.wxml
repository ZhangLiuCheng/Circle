<!--pages/myPublish/myPublish.wxml-->

<block wx:for-items="{{list}}" wx:key="{{item.id}}">
  <navigator class="item_bd" url='../detail/detail?id={{item.id}}'>

    <view class='item_bd_content'>
      <view class="item_bd_title_content">
        <text class="item_bd_title">{{item.message}}</text>
      </view>
      <image class="item_bd_image {{item.imageUrls.length > 0 ? '':'item_bd_image-hidden'}}" src='{{item.imageUrls[0]}}'></image>
    </view>

    <view class='item_function'>
      <view class='item_function_content' data-item='{{item}}'>
        <image class='item_share' src='/images/icon_repost.png'></image>
        <text class='item_function_txt'>243</text>
      </view>
      <view class='item_function_content' data-item='{{item}}'>
        <image class='item_share' src='/images/icon_comment.png'></image>
        <text class='item_function_txt'>敬请期待</text>
      </view>
      <view class='item_function_content' data-item='{{item}}'>
        <image class='item_share' src='/images/icon_like.png'></image>
        <text class=' item_function_txt'>1.2万</text>
      </view>
    </view>
  </navigator>
</block>
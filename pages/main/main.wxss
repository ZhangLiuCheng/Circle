/* pages/main/main.wxss */
#container {
  position:absolute;
  width: 100%;
  height: 100%;
}

.tabBar {
  width: 100%;
  height: 100rpx;
  position: absolute;
  border-top: 1rpx solid #d0d0d0;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.tabBar-item {
  display: flex;
  flex-direction: column;
  width: 38%;
  font-size: 26rpx;
  align-items: center;
}

.tabBar-item-image {
  width: 48rpx;
  height: 48rpx;
}

.tabBar-item-text {
  margin-top: 5rpx;
  font-size: 20rpx;
  color: #2c2c2c;
}

#tabBar-item-add {
  display: flex;
  flex-direction: column;
  width: 24%;
  height: 80rpx;
  align-items: center;
}

#tabBar-item-add-image {
  width: 80rpx;
  height: 80rpx;
}

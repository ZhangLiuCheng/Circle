/* pages/home/home.wxss */
.container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 10rpx;
}

.tabBar {
  width: 100%;
  height: 110rpx;
  position: absolute;
  border-top: 1rpx solid #e0e0e0;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* padding: 10rpx 0rpx 10rpx 0rpx */
}

.tabBar-item {
  display: flex;
  flex-direction: column;
  width: 38%;
  font-size: 26rpx;
  align-items: center;
}

.tabBar-item-image {
  width: 48rpx;
  height: 48rpx;
}

.tabBar-item-text {
  margin-top: 5rpx;
  font-size: 22rpx;
  color: #2c2c2c;
}

#tabBar-item-add {
  display: flex;
  flex-direction: column;
  width: 24%;
  height: 80rpx;
  font-size: 26rpx;
  align-items: center;
}

#tabBar-item-add-image {
  width: 100rpx;
  height: 100rpx;
}

/* pages/publishOption/publishOption.wxss */

.container {
  background-color: rgba(255, 255, 255, 0.95); 
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.option-layout {
  /* background-color: #e0e0e0;    */
  width: 100%;
  height: auto;
  position: absolute;
  bottom: 110rpx;
  padding-bottom: 50rpx;
  padding-top: 50rpx;
  display: grid;
  grid-template-columns: 140rpx 140rpx 140rpx 140rpx;   
  grid-gap: 1rem;
  align-items: center;
  justify-content: center; 
}

.option-item {
  /* background-color: rebeccapurple; */
  width: 140rpx;
  height: 180rpx; 
  opacity: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.option-item-image {
  width: 140rpx;
  height: 140rpx; 
}

.option-item-txt {
  width: auto;
  height: auto; 
  font-size: 30rpx;
  color: #2c2c2c;
  padding-top: 10rpx
}

.bottom-layout {
  /* background-color: royalblue; */
  width: 100%;
  height: 110rpx;
  position: absolute;
  border-top: 1rpx solid #e0e0e0;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff; 
}

.close-image {
  width: 48rpx;
  height: 48rpx;
}
<!--pages/home/home.wxml-->
<view class="container" hidden='{{modalHidden}}'>
  <homeKindModal></homeKindModal>
  <scroll-view class='scrollView' scroll-y="true">
    <view class='index-bd'>
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <navigator class="item_bd" url='../detail/detail'>
          <view class='item_bd_content'>
            <image class='item_bd_image_left' src='image/test.png'></image>
            <view class='item_bd_title_message'>
              <text class="item_bd_title">{{item.title}}</text>
              <text class="item_bd_message">{{item.message}}</text>
            </view>
          </view>
          <view class='item_function'>
            <view class='item_function_layout'>
              <image class='item_share' src='image/share.png'></image>
              <image class='item_hongbao' src='image/hongbao.png'></image>
            </view>
          </view>
        </navigator>
      </block>
    </view>
  </scroll-view>
</view>
/* pages/publish.wxss */

page {
  background-color: #f0f0f0;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.content {
  width: 94%;
  height: 158rpx;
  padding: 3%;
  background-color: #fff;
  margin-top: 30rpx;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
  font-size: 30rpx;
}

.image {
  margin-top: 30rpx;
  width: auto;
  padding: 20rpx;
  height: auto;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
  background-color: #fff;
  font-size: 33rpx;
}

.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-uploader__title {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 30rpx;
}
.weui-uploader__info {
  color: #B2B2B2;
}
.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}
.weui-uploader__file {
  float: left;
  margin-right: 9px;
  margin-bottom: 9px;
}
.weui-uploader__img {
  display: block;
  width: 79px;
  height: 79px;
}

.weui-uploader__file-content {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: #FFFFFF;
}
.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 77px;
  height: 77px;
  border: 1px solid #D9D9D9;
}
.weui-uploader__input-box:before,
.weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #D9D9D9;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.weui-uploader__input-box:active {
  border-color: #999999;
}
.weui-uploader__input-box:active:before,
.weui-uploader__input-box:active:after {
  background-color: #999999;
}
.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.function {
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 30rpx;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
}

.navigator-arrow {
  position: relative;
  width: 14rpx;
  height: 26rpx;
  margin-left: 20rpx;
}

.address {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.address_icon {
  width: 40rpx;
  height: 40rpx;
}

.address_name {
  font-size: 30rpx;
  padding-left: 10rpx;
  color: #333;
  flex: 1;
}

.niming {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx solid #e0e0e0;
}

.niming-name {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  padding-left: 10rpx;
}

.niming-switch {
  color: #707070;
}

.publish {
  margin-top: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  height: auto;
  background-color: #fff;
}
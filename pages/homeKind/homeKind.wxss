/* pages/homeKind/homeKind.wxss */
.home_kind {
  /* background: red; */
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  position: absolute;
  z-index: 2;
}

.home_kind_open {
   height: 100%; 
}

.swiper-tab {
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  /* border-top: 1rpx solid #f0f0f0; */
  border-bottom: 1rpx solid #e0e0e0;
  z-index: 1;
}

.swiper-tab-list {
  width: 33.33%;
  color: #777;
}

.swiper-tab-content {
  width: auto;
  height: auto;
  display: inline-flex; 
  flex-direction: row;
  top: 50%;
  left: 50%;
  position: relative;
  transform: translate(-50%, -50%);
  align-content: center;
  align-items: center;
  justify-content: center
}

.swiper-tab-content-txt {
  font-size: 36rpx;
}

.arraw_image {
  width: 29rpx;
  height: 15rpx;
  margin-left: 5rpx;
  opacity: 0;
}

.arraw_image_on {
  opacity: 1;
  transform: rotate(0deg)
}

.on {
  color: #da7c0c;
  /* border-bottom: 5rpx solid #da7c0c;  */
}

.search {
  font-size: 30rpx;
  width: 33.33%;
  color: #777;
  height: 100%;
}

.search_content {
  width: 100%;
  height: 100%;
}

.search_image {
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  position: relative;
  transform: translate(-50%, -50%);
}

.content {
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  display: none; 
}

.content_open {
  display: flex; 
  flex-direction: column;
}

.option {
  width: 100%;
  height: auto;
  background-color: #FEFEFE;
}

.option-layout {
  padding-bottom: 60rpx;
  padding-top: 60rpx;
  width: 90%;
  height: 20%;
  position: relative;
  margin-left: 5%;
  display: grid;
  grid-template-columns: 150rpx 150rpx 150rpx;   
  grid-gap: 1rem;
  align-items: center;
  justify-content: space-around; 
}

.option-item-txt {
  font-size: 28rpx;
  color: #da7c0c;
  background-color: #eeeeee;
  align-content: center;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  line-height: 70rpx; 
  border-radius: 10rpx;
  text-align: center;
}
<!--pages/homeKind/homeKind.wxml-->
<view class="home_kind {{open ? 'home_kind_open' : ''}}">
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">
      <view class='swiper-tab-content'>
        <text class='swiper-tab-content-txt'>附近</text>
        <image class="arraw_image {{currentTab==0 ? 'arraw_image_on' : ''}}" animation='{{animArrow}}' src='image/arrow_down.png'></image>
      </view>
    </view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">
      <view class='swiper-tab-content'>
        <text class='swiper-tab-content-txt'>热门</text>
        <image class="arraw_image {{currentTab==1 ? 'arraw_image_on' : ''}}" animation='{{animArrow}}' src='image/arrow_down.png'></image>
      </view>
    </view>
    <view class="search" catchtap='search'>
      <image class='search_image' src='image/search_1.png'></image>
    </view>
  </view>

  <view class="content {{open ? 'content_open' : ''}}" catchtap='touchPanel'>
    <view class='option' animation='{{animOption}}'>
       <view class='option-layout'>
        <text class='option-item-txt'>分类1</text>
        <text class='option-item-txt'>分类2</text>
        <text class='option-item-txt'>分类3</text>
        <text class='option-item-txt'>分类4</text>
        <text class='option-item-txt'>分类5</text>
      </view> 
    </view>
  </view>

</view>
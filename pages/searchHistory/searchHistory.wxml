<!--pages/searchHistory/searchHistory.wxml-->

<view class="search-content {{open ? 'search-content-open' : ''}}">
  <view class="search-keyword">
    <view class='search-keyword-icon-txt'>
      <image class='search-keyword-icon' src='/images/search_1.png'></image>
      <input class='search-keyword-txt' value='{{keyword}}' maxlength='20' type='text' confirm-type='search' placeholder='请输入需要搜索的内容' bindinput='searchTextInput' bindfocus='searchTextFocus' bindconfirm='searchTextConfirm'></input>
    </view>
    <text class="search-keyword-btn {{searchEnable ? 'search-keyword-btn-enable' : ''}}" bindtap="searching">搜索</text>
  </view>

  <view class="content {{open ? 'content_open' : ''}}" catchtap='touchPanel'>
    <view class='option'>
      <view class='option-layout'>
        <text class='option-item-txt'>分类1</text>
        <text class='option-item-txt'>分类2</text>
        <text class='option-item-txt'>分类3</text>
        <text class='option-item-txt'>分类4</text>
        <text class='option-item-txt'>分类5</text>
      </view>
    </view>
  </view>

</view>
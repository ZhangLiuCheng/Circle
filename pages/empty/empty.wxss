/* pages/empty/empty.wxss */

.empty {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
}

.empty-hidden {
  display: none;
}

.empty-layout {
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  align-items: center;
  align-self: center;
}

.empty-layout-image {
  width: 128rpx;
  height: 88rpx;
  margin-top: 40%;
}

.empty-layout-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #da7c0c;
}
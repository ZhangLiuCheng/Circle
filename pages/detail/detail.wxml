<!--pages/detail/de tail.wxml-->
<view class='container'>

  <text class="item_bd_title">{{newsDetail.message}}</text>

  <view class='item_bd_images'>
    <block wx:for-items="{{newsDetail.imageUrls}}" wx:for-item="imageUrl" wx:key="*item">
      <image class='item_bd_image_more' src='{{imageUrl}}' lazy-load='true' mode='widthFix'></image>
    </block>
  </view>

  <view class='item_function'>
    <view class='item_function_content' data-item='{{item}}' catchtap='share'>
      <image class='item_share' src='image/icon_repost.png'></image>
      <text class='item_function_txt'>243</text>
    </view>
    <view class='item_function_content' data-item='{{item}}' catchtap='commet'>
      <image class='item_share' src='image/icon_comment.png'></image>
      <text class='item_function_txt'>敬请期待</text>
    </view>
    <view class='item_function_content' data-item='{{item}}' catchtap='like'>
      <image class='item_share' src='image/icon_like.png'></image>
      <text class=' item_function_txt'>1.2万</text>
    </view>
  </view>
</view>
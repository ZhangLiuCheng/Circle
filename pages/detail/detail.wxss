.container {
  background-color: #ffffff; 
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.item_bd_title {
  font-size: 33rpx;
  color: #404040;
  margin-top: 20rpx;
}

.item_bd_images {
  display: flex;
  flex-direction: column;
}

.item_bd_image_more {
  margin-top: 20rpx;
  width: 100%;
  margin-right: 20rpx;
  border-radius: 10rpx;
  border: 5rpx solid #E0E0E0; 
}

.item_function {
  margin-top: 30rpx;
  float: right;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  border-top: 1rpx solid rgba(125, 125, 125, 0.2);
}

.item_function_content {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_function_txt {
  font-size: 26rpx;
  color: #aaaaaa;
  margin-left: 10rpx;
}

.item_hongbao {
  width: 32rpx;
  height: 32rpx;
  /* padding-left: 20rpx;
  padding-right: 20rpx; */
}

.item_share {
  width: 32rpx;
  height: 32rpx;
